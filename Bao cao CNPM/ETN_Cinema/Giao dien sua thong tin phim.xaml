        <DatePicker x:Name="datepicker_NgayKhoiChieu" HorizontalAlignment="Left" Margin="130,263,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cb_XuatTheLoai" HorizontalAlignment="Left" Margin="130,387,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_ChonAnh" Content="Chọn Ảnh" HorizontalAlignment="Left" Margin="859,15,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.021,-1.172" Click="btn_ChonAnh_Click"/>
        <TextBox x:Name="lb_XuatNamPhatHanh" Text="" HorizontalAlignment="Left" Margin="130,294,0,0" VerticalAlignment="Top" Width="261"/>
    </Grid>
</Window>

        <TextBox x:Name="lb_XuatDaoDien" Text="" HorizontalAlignment="Left" Margin="130,232,0,0" VerticalAlignment="Top" Width="261"/>
        <TextBox x:Name="lb_XuatNuocSanXuat" Text="" HorizontalAlignment="Left" Margin="130,325,0,0" VerticalAlignment="Top" Width="261"/>
        <TextBox x:Name="lb_XuatDoTuoiQuyDinh" Text="" HorizontalAlignment="Left" Margin="130,356,0,0" VerticalAlignment="Top" Width="261"/>
        <ComboBox x:Name="cb_MaPhim" HorizontalAlignment="Left" Margin="130,77,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cb_MaPhim_SelectionChanged"/>

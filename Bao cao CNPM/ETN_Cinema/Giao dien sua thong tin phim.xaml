        <Label x:Name="lb_DoTuoiQuyDinh" Content="Độ tuổi quy định" HorizontalAlignment="Left" Margin="10,356,0,0" VerticalAlignment="Top" Foreground="#FFF98800" FontWeight="Bold"/>

        <Image x:Name="img_Poster" HorizontalAlignment="Left" Height="301" Margin="801,81,0,0" VerticalAlignment="Top" Width="196"/>
        <Label x:Name="lb_Poster" Content="Poster" HorizontalAlignment="Left" Margin="876,35,0,0" VerticalAlignment="Top" Width="97" Foreground="#FFF98800" FontWeight="Bold"/>
        <TextBox x:Name="lb_XuatTenPhim" Text="" HorizontalAlignment="Left" Margin="130,113,0,0" VerticalAlignment="Top" Width="261"/>
        <TextBox x:Name="lb_XuatNoiDung" Text="" HorizontalAlignment="Left" Margin="130,144,0,0" VerticalAlignment="Top" Width="261"/>
